<p id="notice"><%= notice %></p>

<h1>Employee</h1>

<p>
  <strong>Name:</strong>
  <%= @personnel.name %>
</p>

<p>
  <strong>Pos code:</strong>
  <%= @personnel.pos_code %>
</p>

<p>
  <strong>Age:</strong>
  <%= @personnel.age %>
</p>

<p>
  <strong>About:</strong>
  <%= @personnel.about %>
</p>

<div id="dependents">
  <h1>Dependents</h1>
  <!-- The `dependents` method returns an array-like collection, so we can call `each` on it: -->
  <% @personnel.dependents.each do |dependent| %>
    <%= render partial: "dependents/dependent", locals: {dependent: dependent} %>
  <% end %>
</div>

  <h2>Add a Dependent</h2>
  <%= render partial: "dependents/form", locals: {dependent: @personnel.dependents.new} %>


<%= link_to 'Edit', edit_personnel_path(@personnel) %> |
